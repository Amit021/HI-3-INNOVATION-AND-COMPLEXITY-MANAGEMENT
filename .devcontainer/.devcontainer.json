{
    "name": "Django Development",
    "build": {
      "context": "..",
      "dockerfile": "Dockerfile",
      "args": { "VARIANT": "3" }
    },
    "forwardPorts": [8000],
    "postCreateCommand": "docker-compose up --build -d && docker run -p 8000:8000 -v \"$(pwd):/workspace\" django-development",
    "customizations": {
      "vscode": {
        "extensions": [
          "ms-python.python",
          "ms-python.vscode-pylance"
        ],
        
        "settings": {
          "terminal.integrated.defaultProfile.linux": "bash"
        }
      }
    }
  }
  